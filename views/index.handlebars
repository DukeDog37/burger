
<div class="col-lg-4">
		<ul>
		  {{#each burgers}}
		    {{#unless this.devoured}}
		      <li>
		        <textarea>{{this.id}}. {{this.burger_name}}</textarea>

		        <form action="/{{this.id}}?_method=PUT" method="POST">
		          <input type="hidden" name="devour" value="false">
		          <button type="submit">Devour It!</button>
		        </form>

		       
		      </li>
		    {{/unless}}
		  {{/each}}
		</ul>
		  		
</div>
